<!-- the forEach() function can be used to iterate over an array to access all the items in it. -->
<!-- the element is the singular version of the array ie the item in the array. -->
<% posts.forEach(function(element){ %>
    
    <h1><%= (element.title); %></h1>
    <p><%= element.post.substring(0,100)+" ... " %><a href="posts/<%=element.title%>">Read More</a></p>
<% }) %>

